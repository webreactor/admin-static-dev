extends includes/security_layout

prepend title
    = 'Авторизация / '

append content
    form.form-signin(action='auth.html' method='get')
        h2.form-signin-heading= 'Xcom-Shop'
        div.form-group
            div.input-group
                div.input-group-addon
                    i.fa.fa-fw.fa-envelope-o
                input.form-control(type='email' required='required' tabindex='1' placeholder='Электронная почта')
        div.form-group
            div.input-group
                div.input-group-addon
                    i.fa.fa-fw.fa-key
                input.form-control(type='password' required='required' tabindex='2' placeholder='Пароль')
        div.form-group
            button(type='submit' class='btn-primary btn-block btn' tabindex='3')= 'Войти'