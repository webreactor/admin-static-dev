extends includes/security-layout

prepend title
    = 'Авторизация / '

append content
    form.form-signin(action='auth.html' method='get')
        h1.form-signin-heading= 'Reactor 4.0'
        div.form-group
            div.input-group
                div.input-group-addon
                    i.fa.fa-fw.fa-envelope-o
                input.form-control(type='email' required='required' tabindex='1' placeholder='Электронная почта')
        div.form-group
            div.input-group
                div.input-group-addon
                    i.fa.fa-fw.fa-key
                input.form-control(type='password' required='required' tabindex='2' placeholder='Пароль')
        div.form-group
            div.checkbox
                label
                    input(type='checkbox' tabindex='3' checked='checked')
                    = 'Запомнить пароль'
        div.form-group
            button.btn.btn-primary.btn-lg.btn-block(type='submit' tabindex='4')= 'Войти'