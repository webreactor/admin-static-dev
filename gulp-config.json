{
    "data":  {
        "core":  [
            "./assets/templates/data/navbar.json",
            "./assets/templates/data/sidebar.json"
        ],
        "index": [
            "./assets/templates/data/index.json"
        ],
        "list":  [
            "./assets/templates/data/list.json"
        ],
        "form":  [
            "./assets/templates/data/form.json"
        ],
        "tree":  [
            "./assets/templates/data/tree.json"
        ]
    },
    "build": {
        "src":  {
            "tpl": [
                "./assets/templates/*.jade"
            ],
            "css":       {
                "app": [
                    "./assets/styles/app.less"
                ]
            },
            "js":        {
                "app":  [
                    "bower_components/jquery/dist/jquery.js",
                    "bower_components/jgrowl/jquery.jgrowl.js",
                    "bower_components/select2/dist/js/select2.js",
                    "bower_components/select2/dist/js/i18n/ru.js",
                    "bower_components/moment/moment.js",
                    "bower_components/moment/locale/ru.js",
                    "bower_components/bootstrap-daterangepicker/daterangepicker.js",
                    "bower_components/summernote/dist/summernote.js",
                    "bower_components/summernote/lang/summernote-ru-RU.js",
                    "assets/scripts/components/tooltip.js",
                    "assets/scripts/components/affix.js",
                    "assets/scripts/components/alert.js",
                    "assets/scripts/components/button.js",
                    "assets/scripts/components/carousel.js",
                    "assets/scripts/components/collapse.js",
                    "assets/scripts/components/dropdown.js",
                    "assets/scripts/components/modal.js",
                    "assets/scripts/components/popover.js",
                    "assets/scripts/components/scrollspy.js",
                    "assets/scripts/components/tab.js",
                    "assets/scripts/components/transition.js",
                    "assets/scripts/app.js"
                ],
                "list": [
                    "assets/scripts/pages/list.js"
                ],
                "form": [
                    "assets/vendor/fine-uploader/jquery.fine-uploader.js",
                    "assets/scripts/pages/form.js"
                ],
                "tree": [
                    "assets/scripts/pages/tree.js"
                ]
            },
            "img":       [
                "assets/images/**/*.png",
                "assets/images/**/*.gif",
                "assets/images/**/*.jpg",
                "assets/images/**/*.jpeg",
                "assets/images/**/*.ico",
                "assets/vendor/**/*.png",
                "assets/vendor/**/*.gif",
                "assets/vendor/**/*.jpg",
                "assets/vendor/**/*.jpeg",
                "assets/vendor/**/*.ico"
            ],
            "fonts":     [
                "assets/fonts/**/*",
                "bower_components/font-awesome/fonts/**/*"
            ]
        },
        "dest": {
            "tpl": "web",
            "css":       "web/css",
            "js":        "web/js",
            "img":       "web/img",
            "fonts":     "web/fonts"
        }
    },
    "watch": {
        "tpl": [
            "./assets/templates/**/*.jade",
            "./assets/templates/**/*.json"
        ],
        "css":       {
            "app": "./assets/styles/**/*.less"
        },
        "js":        {
            "app": "./assets/scripts/**/*.js"
        },
        "img":       "assets/images/**/*",
        "fonts":     "assets/fonts/**/*"
    }
}